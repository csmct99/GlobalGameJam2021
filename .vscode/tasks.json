{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/GlobalGameJam.csproj",
                "-c", "Debug"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "build release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/GlobalGameJam.csproj",
                "-c", "Release"
            ],
            "problemMatcher": "$tsc"
        },       
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/GlobalGameJam.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/GlobalGameJam.csproj"
            ],
            "problemMatcher": "$tsc"
        }
    ]
}